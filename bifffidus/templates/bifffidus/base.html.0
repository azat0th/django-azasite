{% load staticfiles %}
<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <link href="https://fonts.googleapis.com/css?family=Limelight|Shojumaru|Changa" rel="stylesheet">        
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
        <link rel="stylesheet" href="{% static 'css/bifffidus.css' %}">
        
        <title>BIFFFidus</title>
    </head>
    <body class="blog-bg-rear">
        <div class="container blog-bg">
            <header class="blog-header py-3">
                <div class="row flex-nowrap justify-content-between">
                    <div class="col-12 bifffidus-banner" >                     	
                     	<a href="/bifffidus/"><img class="img-fluid rounded" src="{% static "img/banner-bifffidus.png" %}" alt="Banner of Bifffidus Website"></a>
                     	                           
                    </div>
                </div>
            </header>
            <main role="main" class="container">
                <div class="row">
                    <div class="col-md-8">                     
                        {% block content %}
                        {% endblock %}
                    </div>
                    <div class="col-md-4 text-light">
                        
                        <div class="border">
                            {% if user.is_authenticated %}                
                                <p>Hello {{ user.username }} <small>(<a href="{% url 'logout' %}" class="text-muted"> Log out </a>)</small></p>
                            {% else %}
                                <p><a href="{% url 'login' %}" class="btn btn-sm btn-outline-secondary">Login</a></p>                           
                            {% endif %}                        
                        </div>
                        <div class="border">
                        	<p><a href='/bifffidus/festival/' class=''>Festivals</a></p>
                        	<p><a href='/bifffidus/movie/' class=''>Movies</a></p>
                            <p><a href='/bifffidus/person/'>Persons (Casting & Crew)</a></p>
                            <p><a href='/bifffidus/genre/'>Genres</a></p>
                            <p><a href='/bifffidus/tag/'>Tags</a></p>
                            <p><a href='/bifffidus/country/'>Countries</a></p>
                           	
                        </div>
                        
                    </div>
                </div>
            </main>       
         </div>
        
        <footer class="blog-footer ">
            <div class="text-center border text-light">
                <p >Website using <a href="https://www.djangoproject.com/">Django</a>, <a href="https://getbootstrap.com/">Bootstrap</a>, <a href="https://www.themoviedb.org/">TMDB</a> and <a href="https://fontawesome.com/">Font Awesome</a></p>
                <p> Â© 2018 by Azat0th </p>            
                <p><a href="#">Back to top</a></p>
                 
            </div>
        </footer>
		<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.6/umd/popper.min.js" integrity="sha384-wHAiFfRlMFy6i5SRaxvfOCifBUQy1xHdJ/yoi7FRNXMRBu5WHdZYu1hA6ZOblgut" crossorigin="anonymous"></script>
		<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.min.js" integrity="sha384-B0UglyR+jN6CkvvICOB2joaf5I4l3gm9GU6Hc1og6Ls7i6U/mkkaduKaBhlAXv9k" crossorigin="anonymous"></script>        
    </body>
</html>